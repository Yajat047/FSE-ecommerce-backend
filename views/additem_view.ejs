<%- include("header") %>

<div style="border: 2px solid #28a745; padding: 30px; width: 800px; margin: 30px auto; background-color: #fff; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
    <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <a href="/" style="display: inline-flex; align-items: center; color: #666; text-decoration: none; font-size: 16px; transition: all 0.3s ease;" onmouseover="this.style.color='#28a745'" onmouseout="this.style.color='#666'">
            <span style="margin-right: 5px;">←</span> Back to Home
        </a>
        <a href="/listitem" style="display: inline-flex; align-items: center; color: #666; text-decoration: none; font-size: 16px; transition: all 0.3s ease;" onmouseover="this.style.color='#28a745'" onmouseout="this.style.color='#666'">
            View All Products <span style="margin-left: 5px;">→</span>
        </a>
    </div>
    <h1 style="text-align: center; color: #333; margin-bottom: 30px; padding-bottom: 15px; border-bottom: 2px solid #eee;">Add New Product</h1>
    <form action="/addItemSubmit" method="post" enctype="multipart/form-data">
        <div style="display: grid; gap: 20px;">
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Product Name</label>
                <input type="text" name="pName" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter product name" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: start; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500; margin-top: 10px;">Description</label>
                <textarea name="pDescription" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; min-height: 100px; transition: all 0.3s ease;" placeholder="Enter product description" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'"></textarea>
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Price</label>
                <input type="number" name="pPrice" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter price" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Quantity Sold</label>
                <input type="number" name="pSold" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter quantity sold" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Product Quantity</label>
                <input type="number" name="pQuantity" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter available quantity" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Category</label>
                <input type="text" name="pCategory" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter category" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Offer</label>
                <input type="text" name="pOffer" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter offer details" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Rating</label>
                <input type="number" step="0.1" name="pRating" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" placeholder="Enter rating (0-5)" min="0" max="5" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: center; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500;">Status</label>
                <select name="pStatus" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'">
                    <option value="">Select Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
            <div style="display: grid; grid-template-columns: 200px 1fr; align-items: start; gap: 15px;">
                <label style="text-align: right; color: #555; font-weight: 500; margin-top: 10px;">Product Image</label>
                <div>
                    <input type="file" name="pImage" accept="image/*" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; transition: all 0.3s ease;" onFocus="this.style.borderColor='#28a745'" onBlur="this.style.borderColor='#ddd'" />
                    <small style="color: #666; display: block; margin-top: 5px;">Accepted formats: JPEG, JPG, PNG, GIF</small>
                </div>
            </div>
            <div style="text-align: center; margin-top: 20px;">
                <button type="submit" style="background-color: #28a745; color: white; border: none; padding: 12px 40px; border-radius: 8px; font-size: 16px; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='#218838'" onmouseout="this.style.backgroundColor='#28a745'">
                    Add Product
                </button>
            </div>
        </div>
    </form>
</div>

<%- include("footer") %>
