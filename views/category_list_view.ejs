<%- include("header") %>

<div style="border: 2px solid #28a745; padding: 30px; width: 1200px; margin: 30px auto; background-color: #fff; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
    <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <a href="/" style="display: inline-flex; align-items: center; color: #666; text-decoration: none; font-size: 16px; transition: all 0.3s ease;">
            <span style="margin-right: 5px;">‚Üê</span> Back to Home
        </a>
        <a href="/addcategory" style="display: inline-flex; align-items: center; background-color: #28a745; color: white; text-decoration: none; padding: 8px 15px; border-radius: 5px; font-size: 14px; transition: all 0.3s ease;">
            <span style="margin-right: 5px;">+</span> Add New Category
        </a>
    </div>
    <h1 style="text-align: center; padding: 15px; color: #333; font-size: 28px; margin-bottom: 30px; border-bottom: 2px solid #eee;">Category List</h1>
    <div style="overflow-x: auto;">
        <table align="center" class="table table-striped" style="width: 100%; margin-top: 20px; border-collapse: separate; border-spacing: 0; border-radius: 8px; overflow: hidden;">
            <thead style="background-color: #28a745; color: white;">
                <tr>
                    <th style="padding: 15px; text-align: left;">Category Name</th>
                    <th style="padding: 15px; text-align: left;">Description</th>
                    <th style="padding: 15px; text-align: center;">Status</th>
                    <th style="padding: 15px; text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (catList && catList.length > 0) { %>
                    <% for (let d of catList) { %>
                        <tr style="background-color: #fff; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='#f8f9fa'" onmouseout="this.style.backgroundColor='#fff'">
                            <td style="padding: 15px;"><%= d.catname %></td>
                            <td style="padding: 15px;"><%= d.cDescription || 'N/A' %></td>
                            <td style="padding: 15px; text-align: center;">
                                <span style="background-color: <%= d.cStatus.toLowerCase() === 'active' ? '#28a745' : '#dc3545' %>; color: white; padding: 4px 8px; border-radius: 12px; font-size: 12px;">
                                    <%= d.cStatus || 'N/A' %>
                                </span>
                            </td>
                            <td style="padding: 15px; text-align: center;">
                                <div style="display: flex; gap: 8px; justify-content: center;">
                                    <a href="/editcategory?catid=<%= d._id %>" style="color: #28a745; text-decoration: none; padding: 4px 8px; border: 1px solid #28a745; border-radius: 4px; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='#28a745'; this.style.color='white'" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#28a745'">Edit</a>
                                    <a href="/delcategory?catid=<%= d._id %>" onclick="return confirm('Are you sure you want to delete this category?')" style="color: #dc3545; text-decoration: none; padding: 4px 8px; border: 1px solid #dc3545; border-radius: 4px; transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='#dc3545'; this.style.color='white'" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#dc3545'">Delete</a>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 30px; color: #666;">
                            <div style="display: flex; flex-direction: column; align-items: center; gap: 10px;">
                                <span style="font-size: 24px;">üìë</span>
                                <span>No categories found</span>
                                <a href="/addcategory" style="color: #28a745; text-decoration: none; margin-top: 10px;">Add your first category</a>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include("footer") %>
