<%- include("header"); %>

<div style="border: 2px solid #28a745; padding: 30px; width: 800px; margin: 30px auto; background-color: #fff; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
    <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <a href="/" style="display: inline-flex; align-items: center; color: #666; text-decoration: none; font-size: 16px; transition: all 0.3s ease;">
            <span style="margin-right: 5px;">←</span> Back to Home
        </a>
        <a href="/listusers" style="display: inline-flex; align-items: center; color: #666; text-decoration: none; font-size: 16px; transition: all 0.3s ease;">
            View All Users <span style="margin-left: 5px;">→</span>
        </a>
    </div>
    <h1 style="text-align: center; padding: 15px; color: #333; font-size: 28px; margin-bottom: 30px; border-bottom: 2px solid #eee;">Edit User</h1>
    <form action="/editUserSubmit" method="post" style="max-width: 600px; margin: 0 auto;">
        <div style="display: grid; gap: 20px;">
            <div style="display: grid; gap: 8px;">
                <label for="input-name" style="color: #555; font-weight: 500;">Name</label>
                <input type="text" name="name" id="input-name" value="<%= userData.name %>" required 
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease;"
                    placeholder="Enter user name"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'" />
            </div>
            <div style="display: grid; gap: 8px;">
                <label for="input-email" style="color: #555; font-weight: 500;">Email</label>
                <input type="email" name="email" id="input-email" value="<%= userData.email %>" required 
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease;"
                    placeholder="Enter email address"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'" />
            </div>
            <div style="display: grid; gap: 8px;">
                <label for="input-password" style="color: #555; font-weight: 500;">Password</label>
                <input type="password" name="password" id="input-password" value="<%= userData.password %>" required 
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease;"
                    placeholder="Enter password"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'" />
            </div>
            <div style="display: grid; gap: 8px;">
                <label for="input-userRole" style="color: #555; font-weight: 500;">User Role</label>
                <select name="userRole" id="input-userRole" required 
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease; background-color: white;"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'">
                    <option value="Admin" <%= userData.userRole === 'Admin' ? 'selected' : '' %>>Admin</option>
                    <option value="User" <%= userData.userRole === 'User' ? 'selected' : '' %>>User</option>
                </select>
            </div>
            <div style="display: grid; gap: 8px;">
                <label for="input-phoneNumber" style="color: #555; font-weight: 500;">Phone Number</label>
                <input type="tel" name="phoneNumber" id="input-phoneNumber" value="<%= userData.phoneNumber %>" required 
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease;"
                    placeholder="Enter phone number"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'" />
            </div>
            <div style="display: grid; gap: 8px;">
                <label style="color: #555; font-weight: 500;">Verified</label>
                <div style="display: flex; align-items: center; gap: 8px;">
                    <input type="checkbox" name="verified" id="input-verified" <%= userData.verified ? "checked" : "" %>
                        style="width: 20px; height: 20px; cursor: pointer; accent-color: #28a745;" />
                    <label for="input-verified" style="color: #666; cursor: pointer;">Mark user as verified</label>
                </div>
            </div>
            <div style="display: grid; gap: 8px;">
                <label for="input-secretKey" style="color: #555; font-weight: 500;">Secret Key</label>
                <input type="text" name="secretKey" id="input-secretKey" value="<%= userData.secretKey %>" required 
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease;"
                    placeholder="Enter secret key"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'" />
            </div>
            <div style="display: grid; gap: 8px;">
                <label for="input-history" style="color: #555; font-weight: 500;">History</label>
                <input type="text" name="history" id="input-history" value="<%= userData.history.join(',') %>"
                    style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; transition: all 0.3s ease;"
                    placeholder="Enter history (comma separated)"
                    onFocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 2px rgba(40, 167, 69, 0.25)'"
                    onBlur="this.style.borderColor='#ddd'; this.style.boxShadow='none'" />
            </div>
            <input type="hidden" name="userId" value="<%= userData._id %>" />
            <div style="margin-top: 20px; text-align: center;">
                <button type="submit" 
                    style="background-color: #28a745; color: white; border: none; padding: 12px 40px; border-radius: 8px; font-size: 16px; cursor: pointer; transition: all 0.3s ease;"
                    onmouseover="this.style.backgroundColor='#218838'"
                    onmouseout="this.style.backgroundColor='#28a745'">
                    Update User
                </button>
            </div>
        </div>
    </form>
</div>

<%- include("footer"); %>
